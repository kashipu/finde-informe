mixin card-cuatro(image, icon, title, text, href)
    .card-cuatro
        .card-cuatro-image
            img(src=image, alt="", srcset="")
        a(href=href target="_blank")
            .card-cuatro-overlay&attributes(attributes)
            .card-cuatro-content
                .card-cuatro-icon
                    img(src=icon, alt="", srcset="")
                .card-cuatro-title
                    p=title
                .card-cuatro-text
                    p=text